{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Tap current file",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${relativeFile}"
            ],
            "autoAttachChildProcesses": true,
            "restart": true,
            "console": "integratedTerminal",
            "smartStep": true
        }
    ]
}